@model IEnumerable<NAKATHIWEBPORTAL.Models.Route_Type>

<script src="~/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/global_assets/js/plugins/forms/selects/select2.min.js"></script>
<script src="~/global_assets/js/demo_pages/datatables_basic.js"></script>

<div class="navbar navbar-expand-lg navbar-light " style="margin-bottom:16px">

    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="~/vehicle/routetype" class="navbar-nav-link  text-primary d-none d-md-block">
                <i class="icon-add"></i>
                Create

            </a>
        </li>
    </ul>

    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="#" class="navbar-nav-link  text-primary d-none d-md-block">
                <i class="icon-trash"></i>
                Delete Route
            </a>
        </li>
    </ul>



</div>





<!-- Basic datatable -->
<!-- /main navbar -->

<div class="card">

    <div class="card-header header-elements-inline">
        <h5 class="card-title text-center">Routes Types</h5>

        <div class="header-elements">
            <div class="list-icons">

            </div>
        </div>
    </div>



    <table class="table datatable-basic">
        <thead>
            <tr>

                <th>
                    Id
                </th>
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>

         

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ntsa_code)
                    </td>
                    <td>
                        <a href="@Url.Action( "Edit",new { id = item.id })"> @Html.DisplayFor(modelItem => item.name)</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>

