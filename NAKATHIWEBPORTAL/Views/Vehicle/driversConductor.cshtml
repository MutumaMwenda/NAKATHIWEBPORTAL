@model NAKATHIWEBPORTAL.Models.Drivers_Conductor




        <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">


                <div style="line-height:4em;padding-bottom:1em;">
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success alert-dismissable" id="alert">
                            <strong>@TempData["success"]</strong>
                        </div>
                    }
                </div>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-success alert-dismissable" id="alert">
                        <strong>@TempData["error"]</strong>
                    </div>
                }

                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        @using (Html.BeginForm("driversConductor", "Vehicle", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="card-header">
                                <strong>Drivers and Conductor</strong> <small> Form</small>
                            </div>

                            <div class="form-group">
                                <label class=" form-control-label">Id Number</label>
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.id_number, new { @class = "form-control", Styles = "border-radius:50%", @placeholder = "Enter Id number", required = "required" })
                                    @Html.ValidationMessageFor(m => m.date_assigned, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            
                                <div class="form-group">
                                    <label class=" form-control-label">Sacco staff position</label>
                                    <div class="input-group">
                                        @Html.DropDownListFor(m => m.Sacco_Staff_Position_id, ViewBag.List1 as SelectList, "--Please select Staff position --", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Sacco_Staff_Position_id, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            
                           
                                <div class="form-group">
                                    <label class=" form-control-label">Select Vehicle Registration Number</label>
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.reg_no, new { @class = "form-control", Styles = "border-radius:50%", @placeholder = "Enter vehicle Registration No", required = "required" })
                                        @Html.ValidationMessageFor(m => m.reg_no, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                         

                           
                                <div class="form-group">
                                    <label class=" form-control-label">Date Assigned</label>
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.date_assigned, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", Styles = "border-radius:50%", @placeholder = "Enter name", required = "required" })
                                        @Html.ValidationMessageFor(m => m.date_assigned, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                      

                           
                                <div class="form-group">
                                    <label class=" form-control-label"> Assigned to date</label>
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.assigned_up_to_date, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", Styles = "border-radius:50%", @placeholder = "Enter name", required = "required" })
                                        @Html.ValidationMessageFor(m => m.assigned_up_to_date, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="col-sm-10 text-center" style="line-height:2em">
                                            <input type="submit" value="Submit" id="submitButton" class="btn btn-success btn-lg pull-center" />
                                        </div>
                                    </div>
                                </div>
                          
                        }
                    </div>


                </div>

            </div>

        </div>

        <!-- .animated -->
   

    <script>

        var $alert = $('.alert');
        if ($alert.length) {
            setTimeout(function () {
                $alert.fadeIn(1000, 0);
                $alert.fadeOut("slow");
            }, 3000)

        }
    </script>








































