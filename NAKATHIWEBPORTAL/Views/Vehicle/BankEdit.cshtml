@model NAKATHIWEBPORTAL.Models.Banker


    <div class="animated fadeIn">


        <div style="line-height:4em;padding-bottom:1em;">
  

        <div class="card">
            @using (Html.BeginForm("BankEdit", "Vehicle", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="card-header">
                    <strong>Bank Details</strong>
                </div>
                <div class="card-body card-block">

                    <div class="form-group row">
                        <label for="m => m.bank_Code" class="col-sm-3 col-sm-push-1 col-form-label">Bank Code:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.bank_Code, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.bank_Code, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="m => m.name" class="col-sm-3 col-sm-push-1 col-form-label">Bank Name:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })

                        </div>
                    </div>

                </div>

                <div class="card-body card-block">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="col-sm-10 text-center" style="line-height:2em">
                                <input type="submit" value="Update" id="submitButton" class="btn btn-primary pull-center" />
                            </div>
                            @*<input class="form-control">*@
                        </div>
                    </div>
                </div>
            }
        </div>



    </div>

</div>




