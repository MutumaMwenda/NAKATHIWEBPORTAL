@model NAKATHIWEBPORTAL.Models.Vehicle_make
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">

        <div class="card">
            @using (Html.BeginForm("VehicleEdit", "Vehicle", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="card-header">
                    <strong>Edit Make/Model</strong>
                </div>
                <div class="card-body card-block">

                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Make Code:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.code, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.code, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="m => m.name" class="col-sm-3 col-sm-push-1 col-form-label">Make/Model Name:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.make, new { htmlAttributes = new { @class = "form-control", @placeholder = "E.g. Toyota, Hiace" } })
                            @Html.ValidationMessageFor(m => m.make, "", new { @class = "text-danger" })

                        </div>
                    </div>

                </div>

                <div class="card-body card-block">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="col-sm-10 text-center" style="line-height:2em">
                                <input type="submit" value="Update" id="submitButton" class="btn btn-primary pull-center" />
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>



    </div>

</div>





