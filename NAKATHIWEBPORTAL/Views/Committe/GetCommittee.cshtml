@model IEnumerable<NAKATHIWEBPORTAL.ViewModel.CommitteeVM>

@{
    ViewBag.Title = "GetCommittee";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="http://codeseven.github.com/toastr/toastr.js"></script>
<link href="http://codeseven.github.com/toastr/toastr.css" rel="stylesheet">
<script src="https://use.fontawesome.com/d94f445648.js"></script>

@*<p>
    @Html.ActionLink("Create New", "CreateCommittee", "Committe")
</p>*@
<table class="table table-striped table-hover table-bordered" id="CommitteeTable" style="margin-top:100px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.position_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.position_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_created)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $('#CommitteeTable').DataTable();

    </script>

}