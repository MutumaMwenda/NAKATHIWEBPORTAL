@model IEnumerable<NAKATHIWEBPORTAL.Models.MembersViewModel>

<script src="~/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/global_assets/js/plugins/forms/selects/select2.min.js"></script>
<script src="~/global_assets/js/demo_pages/datatables_basic.js"></script>

    
<div class="navbar navbar-expand-lg navbar-light " style="margin-bottom:16px">

    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="~/member" class="navbar-nav-link  text-primary d-none d-md-block">
                <i class="icon-add"></i>
                Create Member
                
            </a>
        </li>
    </ul>

    <ul class="navbar-nav">
        <li class="nav-item">
            
        </li>
    </ul>



</div>
     
    <!-- /theme JS files -->
   

        <!-- Basic datatable -->
        <!-- /main navbar -->


        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title text-center">Members</h5>

                <div class="header-elements">
                    <div class="list-icons">

                    </div>
                </div>
            </div>



            <table class="table datatable-basic">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Names
                        </th>

                        <th>
                            Id No

                        </th>
                        <th>
                            Mobile

                        </th>

                        @*<th>
                            Bank Account

                        </th>*@

                        <th>
                            Email

                        </th>
                        <th>
                            Shares Bought
                        </th>
                        <th>
                            Shares Values
                        </th>
                        @*<th>
                            Action
                        </th>*@


                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                <a href="@Url.Action( "Edit",new { id = item.id })">@Html.DisplayFor(modelItem => item.first_name)</a>
                               
                            </td>
                            <td>
                                
                                @Html.DisplayFor(modelItem => item.id_number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phone_number)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.bank_accountNumber)
                            </td*@
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.total_shares_bought)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.total_values_of_shares_bought)
                            </td>




                            @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "editMemberModal", @data_taget = "editMemberModal" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id })
                            </td>*@
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /basic datatable -->

    


