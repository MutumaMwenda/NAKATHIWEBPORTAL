@model IEnumerable<NAKATHIWEBPORTAL.Models.Contribution_Type>


<script src="~/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/global_assets/js/plugins/forms/selects/select2.min.js"></script>
<script src="~/global_assets/js/demo_pages/datatables_basic.js"></script>
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissable" id="alert">
        <strong>@TempData["success"]</strong>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-success alert-dismissable" id="alert">
        <strong>@TempData["error"]</strong>
    </div>
}

<div class="navbar navbar-expand-lg navbar-light " style="margin-bottom:16px">

    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="~/contribution/contribution_Type" class="navbar-nav-link  text-primary d-none d-md-block">
                <i class="icon-add"></i>
                Create New Type

            </a>
        </li>
    </ul>





</div>





<!-- Basic datatable -->
<!-- /main navbar -->

<div class="card">

    <div class="card-header header-elements-inline">
        <h5 class="card-title text-center">Contribution Types</h5>

        <div class="header-elements">
            <div class="list-icons">

            </div>
        </div>
    </div>



    <table class="table datatable-basic">
        <thead>
            <tr>

                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Type
                </th>
                <th>
                    Fixed?
                </th>
                <th>
                    Frequency
                </th>
                <th>
                    Amount
                </th>



            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        <a href="@Url.Action( "ContributionEdit",new { id = item.id })"> @Html.DisplayFor(modelItem => item.name)</a>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.con_type_id)
                    </td>

                    @if (item.contribution_type == 1)
                    {
                        <td>Fixed</td>

                    }
                    else
                    {
                        <td>NonFixed</td>
                    }

                    <td>
                        @Html.DisplayFor(modelItem => item.frequency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.amount)
                    </td>


                </tr>
            }


        </tbody>
    </table>
</div>


<script>

    var $alert = $('.alert');
    if ($alert.length) {
        setTimeout(function () {
            $alert.fadeIn(1000, 0);
            $alert.fadeOut("slow");
        }, 3000)

    }
</script>