@model NAKATHIWEBPORTAL.Models.Contribution_Type


<div class="card">
    <div class="card-title">


        <h3 class="text-info text-center">Set Contribution Type Form</h3>
        <hr />

    </div>


    <div class="card-body">
        <div class="horizontal-form-elements">
            @using (Html.BeginForm("Contribution_Type", "Contribution"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Name:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })

                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Contribution Name</label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(model => model.con_type_id, ViewBag.List as SelectList, "--Please select Contribution type--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.con_type_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Contribution Type</label>

                        <div class="col-sm-6">
                            Fixed
                            @Html.RadioButtonFor(model => model.contribution_type, 1, true)
                            Not Fixed
                            @Html.RadioButtonFor(model => model.contribution_type, 0, true)
                            @Html.ValidationMessageFor(model => model.contribution_type, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.frequency, htmlAttributes: new { @class = "col-sm-3 col-sm-push-1 col-form-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.frequency, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.frequency, "", new { @class = "text-danger" })
                        </div>
                    </div>









                    <div class="form-group row" id="OddOrEven">
                        @Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "col-sm-3 col-sm-push-1 col-form-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }





        </div>
    </div>
</div>
<!-- /# card -->




<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        $("input[Value=1]").click(function () {
            $("#OddOrEven").show();
        });
        $("input[Value=0]").click(function () {
            $("#OddOrEven").hide();
        });
    });
</script>

