@model NAKATHIWEBPORTAL.Models.Insurance_Policy_Type

<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">


        <div class="card">
            @using (Html.BeginForm("InsurancePolicyType", "Insuarance", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="card-header">
                    <strong>Insurance Policy Type Form </strong>
                </div>

                <div class="card-body card-block">

                    <div class="form-group row">
                        <label for="m => m.InsurerCode" class="col-sm-3 col-sm-push-1 col-form-label">Insurer Name:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.InsurerCode, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(m => m.InsurerCode, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Policy Type Name:</label>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.policytypename, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(m => m.policytypename, "", new { @class = "text-danger" })

                        </div>
                    </div>

                </div>




                <div class="card-body card-block">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="col-sm-10 text-center" style="line-height:2em">
                                <input type="submit" value="Submit" id="submitButton" class="btn btn-primary btn-lg pull-center" />
                            </div>
                            @*<input class="form-control">*@
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>

</div>
