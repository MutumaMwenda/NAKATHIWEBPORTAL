@model NAKATHIWEBPORTAL.Models.License_Type
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">




        <div class="card">
            @using (Html.BeginForm("Licence_Type", "Insuarance", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="card-header">
                    <strong>License Form </strong>
                </div>
                <div class="card-body card-block">
                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Licence Issuer</label>
                        <div class="input-group col-md-6">
                            @Html.DropDownListFor(model => model.license_issuer_code, ViewBag.List as SelectList, "--Please select License Issuer---", new { @class = "form-control", required = "required" })

                            @Html.ValidationMessageFor(model => model.license_issuer_code, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-sm-push-1 col-form-label">Licence Type Name</label>
                        <div class="input-group col-md-6">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>

                <div class="card-body card-block">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="col-sm-10 text-center" style="line-height:2em">
                                <input type="submit" value="Submit" id="submitButton" class="btn btn-success btn-lg pull-center" />
                            </div>
                            @*<input class="form-control">*@
                        </div>
                    </div>
                </div>
            }
        </div>



    </div>

</div>



