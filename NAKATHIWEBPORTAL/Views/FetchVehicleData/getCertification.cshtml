@model IEnumerable<NAKATHIWEBPORTAL.ViewModel.CertificationVM>

@{
    ViewBag.Title = "getCertification";
}

<h2>getCertification</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="http://codeseven.github.com/toastr/toastr.js"></script>
<link href="http://codeseven.github.com/toastr/toastr.css" rel="stylesheet">
<script src="https://use.fontawesome.com/d94f445648.js"></script>

<table class="table table-striped table-hover table-bordered" id="CertificationTable" style="margin-top:20px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.reg_no)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.certfication_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.possessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.possessor_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isurer_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.policyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.active_from)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehicle_Inspection_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.next_inspection_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RSLStickernumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RSLStickernumberexpiry_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.renewed_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.reg_no)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.certfication_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.possessor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.possessor_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isurer_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.policyNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active_from)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vehicle_Inspection_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.next_inspection_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RSLStickernumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RSLStickernumberexpiry_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.renewed_date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $('#CertificationTable').DataTable();

    </script>

}
