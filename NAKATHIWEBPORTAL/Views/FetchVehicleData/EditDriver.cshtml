@model NAKATHIWEBPORTAL.Models.Drivers_Conductor


@using (Html.BeginForm("EditDriver", "FetchVehicleData", FormMethod.Post))
{
    
           
                    
                    <h4 class="modal-title" id="ModalTitle">Edit Vehicle Assignment Record</h4>
                    <div class="modal-body">
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Drivers_Conductor</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class=" form-control-label">ID Number</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.id_number, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.id_number, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class=" form-control-label">Registration Number</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.reg_no, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.reg_no, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class=" form-control-label">Staff Type</label>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.Sacco_Staff_Position_id, ViewBag.List1 as SelectList, "--Please select Staff position --", new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Sacco_Staff_Position_id, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class=" form-control-label">Date Assigned</label>

                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.date_assigned, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.date_assigned, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class=" form-control-label">Assigned to Date</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.assigned_up_to_date, new { htmlAttributes = new { @class = "form-control",@type="date" } })
                                    @Html.ValidationMessageFor(model => model.assigned_up_to_date, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="modal-footer">
                            <input type="submit" value="Submit" id="submitButton" class="btn btn-primary pull-center" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

               
            
}

