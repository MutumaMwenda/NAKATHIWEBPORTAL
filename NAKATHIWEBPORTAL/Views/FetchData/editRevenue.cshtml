@model NAKATHIWEBPORTAL.Models.Revenue

@{
    //ViewBag.Title = "editRevenue";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
@using (Html.BeginForm("editRevenue", "FetchData", FormMethod.Post))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<a href="#" class="close" data-dismiss="modal">&times;</a>*@
                <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
                <h4 class="modal-title" id="ModalTitle">Edit Revenue</h4>
                <div class="modal-body">

                    @*if(TempData["success"] ! = null)
                        {
                        <div class="alert alert-success alert-dismissable" id="alert">
                            <strong>Data successfully saved!</strong>
                        </div>
                        }*@

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">

                        <div class="col-sm-10">
                            <label for="Membername">Member name</label>

                            @Html.DropDownListFor(m => m.member_id, ViewBag.memberList as SelectList, "--Please select member--", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.member_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-10">
                            <label for="revenue type">Revenue Type</label>

                            @Html.DropDownListFor(m => m.revenuetype_id, ViewBag.revenue_Types as SelectList, "--Please select revenue type--", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.revenuetype_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-10">
                            <label for="revenue type">Reg No(Provide ID NO)</label>
                            @Html.DropDownListFor(m => m.reg_no, ViewBag.vehicleList as SelectList, "--Please select Vehicle--", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.reg_no, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-sm-10">
                            <label for="revenue type">Amount</label>

                            @Html.TextBoxFor(m => m.amount, new { @class = "form-control", Styles = "border-radius:50%", @placeholder = "Enter amount", required = "required" })
                            @Html.ValidationMessageFor(m => m.amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-10">
                            <label for="revenue type">Date of Collection</label>
                            @Html.TextBoxFor(m => m.date_collected, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", Styles = "border-radius:50%", @placeholder = "Enter name", required = "required" })
                            @Html.ValidationMessageFor(m => m.date_collected, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-sm-10 text-center">
                            @*<input type="submit" value="Submit" id="submitButton" class="btn btn-primary pull-center" />*@
                        </div>
                    </div>

                    <div class="clearfix">
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Submit" id="submitButton" class="btn btn-primary pull-center" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
}


