@model NAKATHIWEBPORTAL.Models.Shares_table



<div class="card justify-content-center">
    <!-- Animated -->
    <div class="animated fadeIn">



        <div class="content ">
            <div class="container-fluid">
                <div class="row">


                    <div class="card-body">

                        @using (Html.BeginForm("MemberShares", "Member", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Create Shares</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group row">
                                    <label for="initial_sacco_share_capital" class="col-sm-3 col-sm-push-1 col-form-label">Sacco Share Capital</label>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.initial_sacco_share_capital, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.initial_sacco_share_capital, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Price Per Share</label>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.cost_per_share, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                                        @Html.ValidationMessageFor(model => model.cost_per_share, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Minimum Shares</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.min_share, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.min_share, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Maximum Shares</label>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.max_share, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.max_share, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        }

                    </div>



                </div>
            </div>
        </div>


    </div>

</div>



<script>

    var $alert = $('.alert');
    if ($alert.length) {
        setTimeout(function () {
            $alert.fadeIn(1000, 0);
            $alert.fadeOut("slow");
        }, 3000)

    }
</script>

